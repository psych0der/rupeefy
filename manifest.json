{
  "name" : "rupeefy",
  "version" : "1.0",
  "description" : "Convert dollar rates to rupee",
  
  "icons" : {
    "19" : "rupee19.png",
    "38" : "rupee38.png",
    "128": "rupee128.png"
   },

  "background" : { "page":"background.html"},

  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery.js","money.min.js","rupeefy.js"],
      "run_at": "document_end"
    }
  ],
  
  "permissions" : [
    "tabs",
    "http://*/*",
    "https://*/*"
   ],


  "browser_action": {
    "default_icon": {                 
      "19": "rupee19.png",          
      "38": "rupee38.png"            
    },
    "default_title": "Rupeefy"      
   },


  "manifest_version": 2
}